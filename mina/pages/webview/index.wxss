
.abnor{
    position:relative;
    display:block;
    width:100%;
    height:0;
    padding-bottom:100%;
    overflow:hidden;
}
.abnor__box{
    position:absolute;
    display:flex;
    top:0;
    bottom:0;
    left:0;
    right:0;
    flex-direction:column;
    justify-content:center;
    align-items:center;
}

.abnor__image{
    width:514rpx;
    background:transparent no-repeat;
    background-size:cover;
}

.abnor__text{
    margin-top:30rpx;
    color:#FF4500;
    font-size:16px;
    padding: 0 20rpx;
}
.abnor__text_href {
    margin-top:30rpx;
    color:#333;
    font-size:14px;
    word-break: break-word;
    padding: 0 20rpx;
}
.abnor__btn{
    min-width:228rpx;
    height:66rpx;
    margin-top:30rpx;
    padding:0 30rpx;
    background-color:#ff5777;
    border:0 none;
    border-radius:2rpx;
    color:#fff;
    font-size:28rpx;
    text-align:center;
    overflow:hidden;
    line-height:66rpx;
}