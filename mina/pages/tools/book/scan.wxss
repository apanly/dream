.scan_wrap{
    text-align: center;
    margin-top: 50rpx;
    width: 100%;
}

.scan_wrap .btn{
    width: 96%;
    padding: 0;
    margin: 0 2%;
}

.scan_wrap .result {
    display: block;
    width: 96%;
    padding: 0;
    margin: 10rpx 2% 0 2%;
}

.scan_wrap .result .header {
    color: #444;
    background-color: #f5f5f5;
    border-color: #ddd;
    padding: .6rem 1.25rem;
    border-bottom: 1px solid transparent;
    text-align: left;
}

.scan_wrap .result .item {
    padding: 0.6rem;
    color: #444;
    text-align: left;
    font-size:12px;
}